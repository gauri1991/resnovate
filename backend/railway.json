{
  "builder": "NIXPACKS",
  "build": {
    "commands": [
      "python manage.py migrate --noinput",
      "python manage.py collectstatic --noinput",
      "python manage.py create_consultation_slots --days=60 --payment-amount=50.00",
      "python manage.py populate_industry_pages"
    ]
  },
  "deploy": {
    "startCommand": "python setup_production.py && gunicorn config.wsgi --bind 0.0.0.0:$PORT"
  },
  "variables": {
    "PYTHON_VERSION": "3.12.6"
  }
}